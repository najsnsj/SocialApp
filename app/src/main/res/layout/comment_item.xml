<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_comment_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_mention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:textColor="#1A21FF"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Comment"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="10"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_max_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_add_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="답글 달기"
                android:textSize="11sp"
                android:textColor="#9E9E9E"/>

            <TextView
                android:id="@+id/tv_delete_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="댓글 삭제"
                android:visibility="gone"
                android:textSize="11sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:background="#9E9E9E"/>

            <TextView
                android:id="@+id/tv_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="더보기"
                android:textSize="11sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>