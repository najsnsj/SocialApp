<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_receive_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp" >

    <TextView
        android:id="@+id/tv_receive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#66B2FF"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="5dp"
        android:textColor="#000000"/>

        <ImageView
            android:id="@+id/receive_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#66B2FF"
            android:padding="8dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:textColor="#000000"/>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/receive_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#66B2FF"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:textColor="#000000"/>

    <TextView
        android:id="@+id/receive_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:textSize="11sp"
        android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>
